{
  "permissions": {
    "allow": [
      "mcp__context-7__resolve-library-id",
      "mcp__context-7__get-library-docs",
      "WebFetch(domain:github.com)",
      "WebFetch(domain:ui.shadcn.com)",
      "mcp__github__get_pull_request_files",
      "mcp__github__get_file_contents",
      "mcp__github__list_commits",
      "mcp__github__search_code",
      "mcp__github__get_pull_request_status",
      "Bash(mv:*)",
      "Bash(npm run lint)",
      "Bash(npm run format:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(git push:*)",
      "Bash(npm install:*)",
      "Bash(npm run type-check:*)",
      "mcp__filesystem__edit_file",
      "Bash(npx husky add:*)",
      "Bash(chmod:*)",
      "Bash(ls:*)",
      "Bash(git update-index:*)",
      "Bash(npx husky:*)"
    ],
    "deny": []
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "echo \"🚨 PRISMA 체크: 스키마 먼저 확인!\""
          },
          {
            "type": "command",
            "command": "echo \"📌 MainPost, MainCategory, MainTag 사용 (Post X)\""
          },
          {
            "type": "command",
            "command": "echo \"⚠️ null → undefined 변환 필수!\""
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "matcher": "prisma|post|comment|like|bookmark|tag|category",
        "hooks": [
          {
            "type": "command",
            "command": "echo \"📋 Prisma 관련 작업 감지됨!\""
          },
          {
            "type": "command",
            "command": "Get-Content $env:CLAUDE_PROJECT_DIR\\prisma\\schema.prisma | Select-String -Pattern \"model Main\" -Context 0,20"
          }
        ]
      },
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "Get-Content $env:CLAUDE_PROJECT_DIR\\CLAUDE.md"
          }
        ]
      }
    ]
  }
}