#!/bin/sh
echo "🔧 Running auto-format..."
npm run format

# 포맷팅으로 변경사항이 있는지 확인
if ! git diff --exit-code --quiet; then
  echo "📝 Files were formatted. Adding changes..."
  git add -A
  git commit --amend --no-edit
  echo "✅ Formatting applied and committed!"
fi

echo "🔍 Running TypeScript type check..."
npm run type-check

if [ $? -ne 0 ]; then
  echo "❌ Type check failed! Fix TypeScript errors before pushing."
  exit 1
fi

echo "🔍 Running ESLint check..."
npm run lint

if [ $? -ne 0 ]; then
  echo "❌ ESLint check failed! Fix linting errors before pushing."
  exit 1
fi

echo "✅ All checks passed!"